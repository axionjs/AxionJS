{
  "$schema": "http://localhost:3001/schema/registry-item.json",
  "name": "stats-feature",
  "type": "registry:block",
  "author": "axionjs (https://www.axionjs.com)",
  "description": "A stats feature component.",
  "registryDependencies": [
    "button"
  ],
  "files": [
    {
      "path": "blocks/stats-feature.tsx",
      "content": "import { ArrowRight } from \"lucide-react\";\nimport { Button } from \"@/registry/default/ui/button\";\nimport Link from \"next/link\";\n\nexport default function StatsFeature() {\n  const stats = [\n    { value: \"99.9%\", label: \"Uptime\" },\n    { value: \"24/7\", label: \"Support\" },\n    { value: \"100+\", label: \"Countries\" },\n    { value: \"10M+\", label: \"API Requests\" },\n  ];\n\n  return (\n    <section className=\"py-12 md:py-24\">\n      <div className=\"container px-4 md:px-6\">\n        <div className=\"grid gap-6 lg:grid-cols-2 lg:gap-12\">\n          <div className=\"space-y-4\">\n            <h2 className=\"text-3xl font-bold tracking-tight md:text-4xl\">\n              Built for scale, designed for performance\n            </h2>\n            <p className=\"text-muted-foreground md:text-lg\">\n              Our component library is built on a foundation of performance and\n              reliability, ensuring your applications run smoothly even at\n              scale.\n            </p>\n            <div className=\"flex flex-col gap-2 min-[400px]:flex-row\">\n              <Button asChild>\n                <Link href=\"#learn-more\">\n                  Learn more\n                  <ArrowRight className=\"ml-2 h-4 w-4\" />\n                </Link>\n              </Button>\n            </div>\n          </div>\n          <div className=\"grid grid-cols-2 gap-4 md:gap-8\">\n            {stats.map((stat, i) => (\n              <div\n                key={i}\n                className=\"rounded-lg border bg-background p-6 shadow-sm\"\n              >\n                <div className=\"text-3xl font-bold md:text-4xl\">\n                  {stat.value}\n                </div>\n                <p className=\"text-muted-foreground mt-2 text-sm\">\n                  {stat.label}\n                </p>\n              </div>\n            ))}\n          </div>\n        </div>\n      </div>\n    </section>\n  );\n}\n",
      "type": "registry:component",
      "target": ""
    }
  ]
}